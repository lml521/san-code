/* pages/paySuccess/paySuccess.wxss */
.container{
  height: 100%;
  background-color: #fff;
}
.paySuccess{
  width: 100%;
  height: 40%;
  background-color:#f9f9f9;
  display: flex;
  align-items: center;
  flex-direction: column;
  /* background-color: blue; */
}
.paySuccess image{
  margin: 80rpx 0 10rpx 0;
  font-size: 120rpx;
  width: 120rpx;
  height: 120rpx;
}

.toHomePage{
  width: 260rpx;
  height: 100rpx;
  background-color: #f5ba47;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  margin-top: 60rpx;
}
.HotSale .HotSale-title{
  display: flex;
  height: 100rpx;
  font-size: 40rpx;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #eaeaea;
}
.HotSale-title text{
  margin: 0 20rpx;
}

.red{
  color: red !important;
}

.HotSale .HotSale-content{
  background-color: #f9f9f9;
}

.HotSale .HotSale-content .HotSale-item {
  box-sizing: border-box;
  padding: 20rpx;
  margin: 10rpx;
}

.HotSale-item image {
  width: 100%;
  height: 350rpx;
}
.HotSale-content .HotSale-item .item-content{
  background-color: #fff;
}
.HotSale-item .item-content .con-title{
  color: #c1c1c1;

}

.HotSale-item .item-content  .con-price{
  font-size: 40rpx;
  margin: 5rpx 0;
}   
.HotSale-item .item-content .salesBox{
  display: flex;
  justify-content: space-between;
  height: 60rpx;
}    
.item-content .salesBox  .sales{
 color: #a6a6a6;
}
.item-content .salesBox .ImmediatelyBuy{
  width: 180rpx;
  height: 60rpx;
  background-color: #ff5050;
  color: #fff;
 display: flex;
 align-items: center;
 justify-content: center;
}