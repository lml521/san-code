/* pages/personal/personal.wxss */
.container {
  background-color: #eee;
}
.container .userinfoBox{
  height: 300rpx;
  display: flex;
  background-image:linear-gradient(#f4bb4a,#fae8bf);
}
.userinfoBox image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 40rpx;
}
.userinfo{
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
}
.red{
  color: red;
}

.item-box{
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
}
.item-box image{
  width: 80rpx;
  height: 60rpx;
  margin: 30rpx 10rpx ;
}
.arrows{
  margin: 40rpx 30rpx 0 0;
  width: 30rpx;
  height: 30rpx;
  border-top: 1px solid #000 ;
  border-right: 1px solid #000 ;
  display: inline-block;
  transform: rotate(45deg);
}
.left{
  display: flex;
  align-items: center;
}

ul li:first-child,ul li:last-child{
  margin: 20rpx 0 !important;
}
